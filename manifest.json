{
  "manifest_version": 3,
  "name": "CoPi",
  "version": "1.0",
  "description": "Pick a color from the screen and copy it to clipboard.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
